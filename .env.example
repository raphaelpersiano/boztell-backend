NODE_ENV=development
PORT=8080

# Database
DATABASE_URL=postgres://user:password@host:5432/dbname

# WhatsApp Business Cloud API v23
WHATSAPP_VERIFY_TOKEN=your-verify-token
WHATSAPP_SECRET=your-app-secret
WHATSAPP_ACCESS_TOKEN=your-page-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id

# Firebase Admin SDK (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}
# OR point to service account key file:
# FIREBASE_SERVICE_ACCOUNT=/path/to/serviceAccountKey.json

# Google Cloud Storage (for media files)
GCS_BUCKET_NAME=your-gcs-bucket-name
# For local development with service account key:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcs-serviceAccountKey.json
# In Cloud Run, this is handled automatically

# Logging
LOG_LEVEL=info
